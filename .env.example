# Environment Configuration
NODE_ENV=development

# Server
PORT=6789

# Database
DATABASE_URL=postgresql://apiwalletuser:securepassword@localhost:5432/api_wallet

# Redis Cache
REDIS_URL=redis://:redispassword@localhost:6379

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-must-be-32-chars-minimum
ENCRYPTION_KEY=your-32-character-encryption-key!!
BCRYPT_ROUNDS=12

# API Gateway
GATEWAY_URL=http://localhost:6789
MAX_REQUESTS_PER_MINUTE=1000

# Free Tier Limits
DEFAULT_FREE_QUOTA=1000
QUOTA_RESET_INTERVAL=monthly

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# External Services (Add your service configurations)
STRIPE_WEBHOOK_SECRET=whsec_...
OPENWEATHER_FALLBACK_KEY=your_fallback_key

# Docker Compose Passwords
DB_PASSWORD=securepassword
REDIS_PASSWORD=redispassword
GRAFANA_PASSWORD=admin

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api-wallet.log

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Features
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true
ENABLE_QUOTA_ALERTS=true
